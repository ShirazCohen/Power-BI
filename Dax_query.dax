)





-- Total income by date - what-if
EVALUATE 
    SUMMARIZE (
        Sales,
        'Date'[Date],
        "Total income",
        SUM(Sales[Revenue]),
        "Total income with 10% discount",
        SUM(Sales[Revenue]) * 0.90
    )


